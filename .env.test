# Test Environment Configuration

# Application
APP_NAME=Identity Service Test
ENVIRONMENT=test
DEBUG=true

# Database (SQLite in-memory for fast tests)
DATABASE_URL=sqlite+aiosqlite:///:memory:

# Redis
REDIS_URL=redis://localhost:6379/1

# Security
SECRET_KEY=test-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# RSA Keys
RSA_PRIVATE_KEY_PATH=keys/test_private_key.pem
RSA_PUBLIC_KEY_PATH=keys/test_public_key.pem

# SSO/OIDC
ISSUER=http://localhost:8000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OAuth Providers (use test/mock values)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/social/google/callback

KAKAO_CLIENT_ID=test-kakao-client-id
KAKAO_CLIENT_SECRET=test-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:8000/api/social/kakao/callback

NAVER_CLIENT_ID=test-naver-client-id
NAVER_CLIENT_SECRET=test-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:8000/api/social/naver/callback

# Email (not used in tests)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASSWORD=test-password
SMTP_FROM=test@example.com

# SMS (not used in tests)
SMS_API_KEY=test-api-key
SMS_API_SECRET=test-api-secret
SMS_SENDER=test-sender
